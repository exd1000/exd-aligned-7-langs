{
  "compilerOptions": {
    "target": "ES2020",                // Modern features like async/await
    "module": "CommonJS",              // For Node.js compatibility
    "strict": true,                    // Catch errors early, enables all strict type-checking
    "esModuleInterop": true,           // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true, // avoids weird cross-platform issues
    "skipLibCheck": true,              // Prevent noise from node_modules types
    "lib": ["ES2020"]                  // disables automatic inclusion of 'dom'

  },
"include": ["**/*.ts"]                 // get all TypeScript files recursively from this project
}